        lm_ht_index_nav_lctl_lgui: lm_ht_index_nav_lctl_lgui {
            compatible = "zmk,behavior-hold-tap";
            label = "LM_HT_INDEX_NAV_LCTL_LGUI";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            bindings = <&lm_index_nav_lctl_lgui>, <&kp>;
