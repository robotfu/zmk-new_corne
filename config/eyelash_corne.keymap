        lm_ht_index_nav_lgui: lm_ht_index_nav_lgui {
            compatible = "zmk,behavior-hold-tap";
            label = "LM_HT_INDEX_NAV_LGUI";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            bindings = <&lm_index_nav_lgui>, <&kp>;
