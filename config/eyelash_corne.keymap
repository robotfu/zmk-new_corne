        num_fkey: num_fkey {
            compatible = "zmk,behavior-hold-tap";
            label = "NUM_FKEY";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
