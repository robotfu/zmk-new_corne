        // Layer 2 + LGUI ÂÆè

        lm_pinky_nav_lgui: lm_2_lgui {
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&mo 2 &kp LGUI>,
                <&macro_pause_for_release>,
                <&macro_release>,
                <&mo 2 &kp LGUI>;
        };

        lm_index_num_lgui: lm_index_num_lgui {
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&mo 6 &kp LGUI>,
                <&macro_pause_for_release>,
                <&macro_release>,
                <&mo 6 &kp LGUI>;

            label = "LM_INDEX_NUM_LGUI";
        };

        lm_index_nav_lgui: lm_index_nav_lgui {
